@model Mvc5Cv.Models.Entity.TblEgitimlerim
@{
    ViewBag.Title = "EgitimGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>EĞİTİM GÜNCELLEME SAYFASI</h4>
<br />
<form method="post" class="form-group">
    @Html.Label("ID")
    @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @readonly = true })
    @Html.Label("BAŞLIK")
    @Html.TextBoxFor(m => m.Baslik, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Baslik, "", new { @style = "color:red" })
    <br />
    @Html.Label("ALT BAŞLIK 1")
    @Html.TextBoxFor(m => m.AltBaslik1, new { @class = "form-control" })
    @Html.Label("ALT BAŞLIK 2")
    @Html.TextBoxFor(m => m.AltBaslik2, new { @class = "form-control" })
    @Html.Label("GNO")
    @Html.TextBoxFor(m => m.Gno, new { @class = "form-control" })
    @Html.Label("TARİH")
    @Html.TextBoxFor(m => m.Tarih, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Tarih, "", new { @style = "color:red" })
    <br />
    <br />
    <button class="btn btn-info">EĞİTİM GÜNCELLE</button>
</form>

